
<%= form_for Classroom.new, url: teacher_course_classrooms_path do |f| %>
<div class="col-md-10 col-sm-offset-1 well">
<div class="col-md-5">
  <div class="form-group">
    <label for="exampleInputName2">Name classroom</label>
    <%= f.text_field :name,required: true, class: "form-control", placeholder: "Name classroom" %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail2">Subject</label>
    <%= f.text_field :subject,required: true, class: "form-control", placeholder: "Subject" %>
  </div>
    <div class="form-group">
      <label for="exampleInputEmail2">Number month</label>
      <%= f.number_field :month, required: true, class: "form-control", placeholder: "Number month" %>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail2">Schedule</label>
      <%= f.text_field :schedule, required: true,class: "form-control", placeholder: "Schedule" %>
    </div>
  </div>

<div class="col-md-5 col-sm-offset-2">
  <div class="form-group">
    <label for="exampleInputName2">Date start</label>
    <%= f.text_field :start, type: :date, required: true, class: "form-control", placeholder: "Date start" %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail2">Number</label>
    <%= f.number_field :total, required: true, class: "form-control", placeholder: "Number" %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail2">Fee</label>
    <%= f.text_field :fee, required: true, class: "form-control", placeholder: "Fee" %>
  </div>
  <div class="">
    <button type="submit" name="button" class="btn btn-primary col-md-12">Add</button>
  </div>
  </div>

</div>
<% end %>
