
<%= form_for @classroom, url: teacher_course_classrooms_path  do |f| %>
<div class="col-md-12">
<div class="col-md-6">
  <div class="form-group">
    <label for="exampleInputName2">Tên lớp học</label>
    <%= f.text_field :name, class: "form-control", placeholder: "Tên lớp học" %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail2">Môn học</label>
    <%= f.text_field :subject, class: "form-control", placeholder: "Môn học" %>
  </div>
    <div class="form-group">
      <label for="exampleInputEmail2">Số tháng</label>
      <%= f.number_field :month, class: "form-control", placeholder: "Số tháng" %>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail2">Thời khóa biểu</label>
      <%= f.text_field :schedule, class: "form-control", placeholder: "Thời kháo biểu" %>
    </div>
  </div>

<div class="col-md-6">
  <div class="form-group">
    <label for="exampleInputName2">Ngày bắt đầu</label>
    <%= f.text_field :start, type: :date, class: "form-control", placeholder: "Ngày bắt đầu" %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail2">Số lượng</label>
    <%= f.number_field :total, class: "form-control", placeholder: "Số lượng" %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail2">Học phí</label>
    <%= f.text_field :fee, class: "form-control", placeholder: "Học phí" %>
  </div>
  <div class="pull-right">
    <button type="submit" name="button" class="btn btn-primary ">Thêm</button>
  </div>
  </div>

</div>
<% end %>
