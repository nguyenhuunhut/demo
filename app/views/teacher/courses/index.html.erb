
<% if @notications.empty? == false %>
<div class="well col-md-7 list-notication">
  <table>
  <% @notications.each do |notication| %>
  <tr class="box-notication">
    <td class="col-md-10">
      <%= notication.content %>
    </td>
    <td class="col-md-2">
      <a data-target="<%= delete_notication_path(notication) %>" class="delete-notication btn">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
</div>
<% end %>

<div class="col-md-12 well">
<label for="teacher">List course</label>
<div class="">
  <a href="<%= new_teacher_course_path %>" class="btn btn-primary">Add course</a>

</div>  </br>
<div class="list-course">
<table class="table table-hover table-bordered" >
  <tr style="background: pink">
    <th>#</th>
    <th>Name course</th>
    <th>Description</th>
    <th>Date create</th>
    <th>Action</th>
  </tr>
  <% @courses.each_with_index do |course,index| %>
  <tr class="box-course">
    <td><%= index+1 %></td>
    <td><%= course.name %></td>
    <td><%= course.description %></td>
    <td><%= course.created_at.strftime("%d/%m/%Y %H:%M") %></td>
    <td>
      <a href="<%= edit_teacher_course_path(course) %>" class="btn btn-info">Edit</a>
      <a data-target=" <%= teacher_course_path(course) %>" class="btn btn-danger delete-course" data-confirm="Are you sure?">Delete</a>
      <a href="<%= teacher_course_path(course) %>" class="btn btn-success">Classroom</a>
    </td>
  </tr>
  <% end %>
</table>
</div>
</div>
