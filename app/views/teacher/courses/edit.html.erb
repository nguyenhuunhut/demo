<%= form_for @course, url: teacher_course_path do |f| %>
<div class="col-md-6">
  <div class="form-group">
    <label for="exampleInputName2">Tên khóa học</label>
    <%= f.text_field :name, class: "form-control", placeholder: "Tên khóa học" %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail2">Mô tả</label>
    <%= f.text_area :description, class: "form-control", placeholder: "Mô tả" %>
  </div>
  <button type="submit" name="button" class="btn btn-primary">Sửa</button>
  </div>
<% end %>
