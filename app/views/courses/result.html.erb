<div class="well col-md-12" style="margin-top: 20px">
<label for="teacher">List course</label>
<div class="list-course">
<table class="table table-hover table-bordered" >
  <tr style="background: pink">
    <th>#</th>
    <th>Name course</th>
    <th>Name teacher</th>
    <th>Address</th>
    <th>Phone number</th>
    <th>Email</th>
    <th>Action</th>
  </tr>
  <% @result.each_with_index do |course,index| %>
  <tr>
    <td><%= index+1 %></td>
    <td><%= course.name %></td>
    <td><%= course.user.name %></td>
    <td><%= course.user.address %></td>
    <td><%= course.user.phone %></td>
    <td><%= course.user.email %></td>
    <td>
      <a href="<%= course_path(course.id) %>" class="btn btn-success">Detail</a>
    </td>
  </tr>
  <% end %>
</table>
</div>
</div>
