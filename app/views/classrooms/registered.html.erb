<% if flash[:success] %>
  <div class="alert alert-success">
  <%= flash[:success] %>
  </div>
<% end %>
<div class="message">
</div>

<label>Các lớp học</label>
<div class="list-classroom">
<table class="table table-hover table-bordered" >
  <tr style="background: pink">
    <th>STT</th>
    <th>Tên lớp học</th>
    <th>Môn học</th>
    <th>Số tháng</th>
    <th>Thời khóa biểu</th>
    <th>Ngày bắt đầu</th>
    <th>Học phí</th>
    <th>Số lượng</th>
    <th>Đã đăng ký</th>
    <th>Chức năng</th>
  </tr>
  <% @registered.each_with_index do |registered, index| %>
  <tr class="box-classroom">
    <td><%= index+1 %></td>
    <td><%= registered.classroom.name %></td>
    <td><%= registered.classroom.subject %></td>
    <td><%= registered.classroom.month%></td>
    <td><%= registered.classroom.schedule %></td>
    <td><%= registered.classroom.start %></td>
    <td><%= registered.classroom.fee %></td>
    <td><%= registered.classroom.total%></td>
    <td class="view-registers"><%= registered.classroom.registers.where(is_register: true).count %></td>
    <td>
      <% register = registered.classroom.registers.where(user_id: @current_user.id) %>
      <a data-target="<%= register_classroom_path(registered.classroom.id) %>" class="btn btn-primary register-classroom"><%= register.try(:is_register) ? "Đăng ký" :  "Hủy đăng ký"  %></a>
    </td>
  </tr>
  <% end %>
</table>
</div>
