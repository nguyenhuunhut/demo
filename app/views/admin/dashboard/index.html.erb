<label for="teacher">Danh sách giáo viên</label>
<div class="list-user">
<table class="table table-hover table-bordered" >

  <tr style="background: pink">
    <th>STT</th>
    <th>Tên</th>
    <th>Số điện thoại</th>
    <th>Địa chỉ</th>
    <th>Email</th>
    <th>Chức năng</th>
  </tr>
  <% @teachers.each_with_index do |teacher,index| %>
  <tr class="box-user">
    <td><%= index+1 %></td>
    <td><%= teacher.name %></td>
    <td><%= teacher.phone %></td>
    <td><%= teacher.address %></td>
    <td><%= teacher.email %></td>
    <td>
      <a href="<%= edit_admin_user_path(teacher) %>" class="btn btn-info">Sửa</a>
      <a data-target="<%= teacher.id %>" class="btn btn-danger delete-user" data-confirm="Bạn chắc chắn muốn xóa?">Xóa</a>
    </td>
  </tr>
  <% end %>
    <tr><td colspan="6"><%= will_paginate @teachers %></td></tr>
</table>
</div>

