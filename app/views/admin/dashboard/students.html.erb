<div class="message">
</div>
  <% if flash[:success] %>
    <div class="alert alert-success">
  <%= flash[:success] %>
    </div>
  <% end %>
<div class="col-md-12 well">
<label for="student">List students</label>
<div class="">
  <a href="<%= new_admin_user_path %>" class="btn btn-primary">Add student</a>
</div></br>
<div class="list-user">
<table class="table table-hover table-bordered" >
  <tr style="background: pink">
    <th>#</th>
    <th>Name</th>
    <th>Phone number</th>
    <th>Address</th>
    <th>Email</th>
    <th>Action</th>
  </tr>
  <% @students.each_with_index do |student,index| %>
  <tr class="box-user">
    <td><%= index+1 %></td>
    <td><%= student.name %></td>
    <td><%= student.phone %></td>
    <td><%= student.address %></td>
    <td><%= student.email %></td>
    <td>
      <a href="<%= edit_admin_user_path(student) %>" class="btn btn-info">Edit</a>
      <a data-target="<%= student.id %>" class="btn btn-danger delete-user" data-confirm="Are you sure?">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
<% if will_paginate(@students) %>
<div class="pull-right"><%= will_paginate @students %></div>
<% end %>
</div>
</div>
