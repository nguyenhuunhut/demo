<div class="message">
</div>
  <% if flash[:success] %>
    <div class="alert alert-success">
  <%= flash[:success] %>
    </div>
  <% end %>

<label for="student">Danh sách học viên</label>
<div class="list-user">
<table class="table table-hover table-bordered" >
  <tr style="background: pink">
    <th>STT</th>
    <th>Tên</th>
    <th>Số điện thoại</th>
    <th>Địa chỉ</th>
    <th>Email</th>
    <th>Chức năng</th>
  </tr>
  <% @students.each_with_index do |student,index| %>
  <tr class="box-user">
    <td><%= index+1 %></td>
    <td><%= student.name %></td>
    <td><%= student.phone %></td>
    <td><%= student.address %></td>
    <td><%= student.email %></td>
    <td>
      <a href="<%= edit_admin_user_path(student) %>" class="btn btn-info">Sửa</a>
      <a data-target="<%= student.id %>" class="btn btn-danger delete-user" data-confirm="Bạn chắc chắn muốn xóa?">Xóa</a>
    </td>
  </tr>
  <% end %>
</table>
<% if will_paginate(@students) %>
<div class="pull-right"><%= will_paginate @students %></div>
<% end %>
</div>
