
<label for="teacher">Danh sách khóa học</label>
<div class="list-course">
<table class="table table-hover table-bordered" >
  <tr style="background: pink">
    <th>STT</th>
    <th>Tên khóa học</th>
    <th>Ngày tạo</th>
    <th>Số lớp</th>
  </tr>
  <% @user.courses.each_with_index do |course,index| %>
  <tr>
    <td><%= index+1 %></td>
    <td><%= course.name %></td>
    <td><%= course.created_at %></td>
    <td><%= course.classrooms.count %></td>
  </tr>
  <% end %>
</table>
</div>
