<% if @user.errors.any? %>
<div class="col-md-4 alert-danger alert col-sm-offset-4">
<% @user.errors.full_messages.each do |message| %>
  <li><%= message %></li>
<% end %>
</div>
<% end %>
<%= form_for @user, url: admin_users_path  do |f| %>
<div class="col-md-4 col-sm-offset-4 well">
  <div class="form-group">
    <label for="exampleInputName2">Name</label>
    <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail2">Phone number</label>
    <%= f.text_field :phone, class: "form-control", placeholder: "Phone number" %>
  </div>
    <div class="form-group">
      <label for="exampleInputEmail2">Address</label>
      <%= f.text_field :address, class: "form-control", placeholder: "Address" %>
    </div>

  <div class="form-group">
    <label for="exampleInputName2">Email</label>
    <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail2">Password</label>
    <%= f.text_field :password, type: "password", class: "form-control", placeholder: "Mật khẩu" %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail2">Position</label>
    <%= f.select(:role, options_for_select([["Teacher", 1], ["Student",0]]),{},{class: "form-control"})%>
  </div>
  <div class="">
    <button type="submit" name="button" class="btn btn-primary col-md-12">Add</button>
  </div>
</div>
<% end %>
