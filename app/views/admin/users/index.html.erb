<div class="list-user">
<table class="table table-hover table-bordered" >
  <tr style="background: pink">
    <th>STT</th>
    <th>Tên</th>
    <th>Số điện thoại</th>
    <th>Địa chỉ</th>
    <th>Email</th>
    <th>Chức năng</th>
  </tr>
  <% @users.each_with_index do |user,index| %>
  <tr class="box-user">
    <td><%= index+1 %></td>
    <td><%= user.name %></td>
    <td><%= user.phone %></td>
    <td><%= user.address %></td>
    <td><%= user.email %></td>
    <td>
      <a href="<%= edit_admin_user_path(user) %>" class="btn btn-info">Sửa</a>
      <a data-target="<%= user.id %>" class="btn btn-danger delete-user" data-confirm="Bạn chắc chắn muốn xóa?">Xóa</a>
    </td>
  </tr>

  <% end %>
</table>
<div class="pull-right">
  <%= will_paginate @users %>
</div>
</div>
