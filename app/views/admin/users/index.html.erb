<div class="col-md-12 well">
  <label for="teacher">List users</label>
  <div class="">
    <a href="<%= new_admin_user_path %>" class="btn btn-primary">Add user</a>
  </div></br>
<div class="list-user">
<table class="table table-hover table-bordered" >
  <tr style="background: pink">
    <th>#</th>
    <th>Name</th>
    <th>Phone number</th>
    <th>Address</th>
    <th>Email</th>
    <th>Action</th>
  </tr>
  <% @users.each_with_index do |user,index| %>
  <tr class="box-user">
    <td><%= index+1 %></td>
    <td><%= user.name %></td>
    <td><%= user.phone %></td>
    <td><%= user.address %></td>
    <td><%= user.email %></td>
    <td>
      <a href="<%= edit_admin_user_path(user) %>" class="btn btn-info">Edit</a>
      <a data-target="<%= user.id %>" class="btn btn-danger delete-user" data-confirm="Are you sure?">Delete</a>
    </td>
  </tr>

  <% end %>
</table>
<div class="pull-right">
  <%= will_paginate @users %>
</div>
</div>
</div>
